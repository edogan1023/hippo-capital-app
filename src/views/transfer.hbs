<body class="bg-logo-navy">
<script src="/javascripts/transfer.js"></script>

<div class="flex flex-col">
    <div class="grid grid-flow-col gap-1 grid-cols-12 h-full justify-center items-center">
        <div class="col-span-3">
            <img src="/images/hippo-logo.png" alt="Hippo Capital Logo" class="h-[100px] min-w-[300px]"/>
        </div>

        <div class="col-span-1"></div>

        <a href = "/userDashboard" class = "flex-1 basis-[5%] max-w-[28px] min-w-[28px] flex justify-center-safe items-center transition duration-200 ease-in-out hover:scale-105">
            <img src="/images/home-icon.png" alt="Home" class="h-7 w-7" />
        </a>
    </div>
</div>
<div class=" bg-black h-full max-w-full mr-[90px] ml-[90px] max-h-full text-white ">
    <form id="transferForm" action="/userDashboard/transfer/submit" method="POST" class="max-w-4xl mx-auto p-4">
        <p class="text-lg font-semibold mb-4">Select Account to Transfer from:</p>
        <input type="hidden" name="selectedAccountNumber" id="selectedAccountNumber">
        <input type="hidden" name="selectedBalance" id="selectedBalance">
        <input type="hidden" name="validation" id="validation" value="{{validation}}">
        <input type="hidden" name="transfer_result" id="transfer_result" value="{{transfer_result}}">
        <div class="grid grid-cols-4 gap-4 mb-6">
            {{#each transfer}}
                <div class="card border rounded-lg p-4 text-center cursor-pointer transition transform
                       hover:-translate-y-1 hover:shadow-lg hover:bg-logo-navy
                       aria-[selected=true]:bg-logo-navy aria-[selected=true]:text-white"
                        aria-selected="false" data-account-number="{{account_number}}" data-balance="{{balance}}">
                    <h3 class="font-medium text-white">{{capitalizeLetter account_type}} {{capitalizeLetter account_sub_type}}</h3>
                    <p class="text-white text-sm">Account #: {{account_number}}</p>
                    <p class="text-white font-semibold mt-1">Balance: Â£{{balance}}</p>
                </div>
            {{/each}}
        </div>

        <div class = "grid grid-cols-2 gap-2 mb-6">
            <label for="amount" class="block font-medium mb-1">Amount:</label>
            <input
                    type="text"
                    name="amount"
                    id="amount"
                    placeholder="0.00"
                    class="border rounded-md p-2 w-80 mb-4">
            <span id="amount-error" class="text-red-500 text-sm hidden">Amount must be at least 0.01</span>
            <span id="insufficient-funds-error" class="text-red-500 text-sm hidden">Insufficient Funds</span>


            <label for="destination_account_number" class="block font-medium mb-1">Send to Account Number:</label>
            <input
                    type="number"
                    name="destination_account_number"
                    id="destination_account_number"
                    required
                    min="1"
                    class="border rounded-md p-2 w-80 mb-4">
        </div>

        <div class="grid grid-cols-2 gap-2 mb-6">
            <label for="description" class="block font-medium mb-2">Description:</label>
            <textarea
                    id="description"
                    name="description"
                    rows="4"
                    placeholder="Type your transaction description here..."
                    class="w-90 p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-custom-gold focus:border-custom-gold
                    text-white placeholder-gray-200 resize-y"
            ></textarea>
        </div>

        <button type="submit" class="bg-green-400 text-white font-semibold px-4 py-2 rounded border-[1px] border-white
               hover:bg-green-500 hover:text-black transition disabled:bg-red-500" id="transferButton" disabled>
            Transfer
        </button>
    </form>
</div>


</body>
