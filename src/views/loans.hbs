<body class="bg-logo-navy">
<script src="/javascripts/loans.js"></script>

<div class="flex flex-col">
    <div class="grid grid-flow-col gap-1 grid-cols-12 h-full justify-center items-center">
        <div class="col-span-3">
            <img src="/images/hippo-logo.png" alt="Hippo Capital Logo" class="h-[100px]"/>
        </div>

        <div class="col-span-1"></div>

        <a href="/userDashboard" class=" col-span-2">
            <img src="/images/home-icon.png" alt="Home" class="h-7 w-7">
        </a>

        <a href="/userDashboard/loans/pendingLoans" class=" col-span-2">
            <div class="flex items-center justify-center text-white text-lg font-semibold bg-logo-navy-hover rounded-2xl w-max border-[2px] border-custom-gold p-[5px]">
                View Pending Loans
            </div>
        </a>

        <a href="/userDashboard/loans/loanApplication" class=" col-span-2">
            <div class="flex items-center justify-center text-white text-lg font-semibold bg-logo-navy-hover rounded-2xl w-max border-[2px] border-custom-gold p-[5px]">
                Apply for Loans
            </div>
        </a>

    </div>
</div>

<!-- loans -->
<div class=" h-full grid grid-flow-row-dense grid-cols-2 md:grid-cols-2 gap-4">
    {{#each loans}}
        <a href="/userDashboard/loans/loansInfo/{{loan_number}}">
            <div id="clickableDiv" class="cursor-pointer rounded-3xl bg-white mt-[25px] max-h-[200px] w-[350px] m-[60px] ml-[200px] mr-[200px]">
                <div class="flex flex-col items-center justify-center h-full text-logo-navy">
                    <h3 class="text-lg font-bold">{{loan_number}}</h3>
                    <h2  class="text-lg font-bold capitalize">{{ loan_type}} Loan</h2>
                    <p class="text-lg">Â£{{principal}}</p>
                    <p class="text-lg">{{term_months}} months at {{intrest_rate}}%</p>
                    <p class="text-lg mt-2">Click to see further details</p>
                </div>
            </div>
        </a>
    {{/each}}
</div>
</body>
